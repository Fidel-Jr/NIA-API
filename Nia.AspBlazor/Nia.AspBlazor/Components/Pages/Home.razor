@page "/"
@using Nia.AspBlazor.Components.Pages.Charts
<main class="h-full overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <h2
              class="my-6 text-2xl mb-4 font-semibold text-gray-700 dark:text-gray-200">
              Dashboard
            </h2>
        @inject NavigationManager NavigationManager

        <div class="d-flex justify-content-between align-items-center p-4 mb-4 bg-white border rounded shadow-sm">
            <div class="d-flex">
                <!-- QR Code Button -->
                <RadzenButton Style="background-color: #228c22;"
                              class="text-white px-4 py-2 me-3 d-flex align-items-center"
                              >

                    <span class="material-symbols-outlined me-2">qr_code</span>
                    QR Generation Validation
                </RadzenButton>

                <!-- Reporting Button -->
                <RadzenButton Style="background-color: #228c22;"
                              class="text-white px-4 py-2 d-flex align-items-center"
                              >

                    <span class="material-symbols-outlined me-2">description</span>
                    Reporting
                </RadzenButton>
            </div>
        </div>
            <h3
            class="my-6 mt-5 mb-5 text-2xl font-semibold text-gray-700 dark:text-gray-200"
          >
            Hello, JGludo
          </h3>
                <!-- Cards -->
        <div class="row g-3 mb-4">
            <!-- Card: Total Items -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 40px; height: 40px;  background-color: #ffedde;">
                            <span class="material-symbols-outlined" style="color: #ff5a1f;">
                                deployed_code
                            </span>
                        </div>
                        <div>
                            <p class="mb-1 text-muted small">Total Items</p>
                            <h5 class="mb-0">6389</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card: Category -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 40px; height: 40px; background-color: #dff7ed;">
                            <span class="material-symbols-outlined" style=" color: #0e9e6e;">
                                sell
                            </span>
                        </div>
                        <div>
                            <p class="mb-1 text-muted small">Category</p>
                            <h5 class="mb-0">3</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card: Admins -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 40px; height: 40px; background-color: #e3f1ff;">
                            <span class="material-symbols-outlined" style="color: #3e82f7;">
                                group
                            </span>
                        </div>
                        <div>
                            <p class="mb-1 text-muted small">Admins</p>
                            <h5 class="mb-0">2</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <DashboardChart />
        </div>
        </main>

@code {
    private string UserName = "JGludo";

   
}
